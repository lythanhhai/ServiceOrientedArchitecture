@model List<TypeCourse>;
@{
    ViewData["Title"] = "Course Create Page";
    var typeCourses = Model;
}
<h1 class="display-4">Course Create Page</h1>
<form action="/Course/Save" method="POST">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name">
    </div>
    <div class="form-group">
        <label for="Slug">Slug</label>
        <input type="text" class="form-control" id="Slug" name="Slug">
    </div>
    <div class="form-group">
        <label for="Overall">Overall</label>
        <input type="text" class="form-control" id="Overall" name="Overall">
    </div>
    <div class="form-group">
        <label for="Content">Content</label>
        <textarea type="text" class="form-control" id="Content" name="Content"></textarea>
    </div>
    <div class="form-group">
        <label for="Image">Image</label>
        <input type="text" class="form-control" id="Image" name="Image">
    </div>
    
    <div class="form-group">
        <label for="TypeCourse">TypeCoursel</label>
        <select class="form-control" id="TypeCourseId" name="TypeCourseId">
            @foreach (var typeCourse in typeCourses)
            {
                <option value="@typeCourse.Id">@typeCourse.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
